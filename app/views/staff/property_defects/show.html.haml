- content_for :page_title_prefix, I18n.t('page_title.staff.defects.show', reference_number: @defect.reference_number)

.govuk-breadcrumbs
  %ol.govuk-breadcrumbs__list
    = breadcrumb_link_to('Home', dashboard_url)
    = breadcrumb_link_to(I18n.t('page_title.staff.estates.show', name: @defect.property.scheme.estate.name), estate_url(@defect.property.scheme.estate))
    = breadcrumb_link_to(I18n.t('page_title.staff.schemes.show', name: @defect.property.scheme.name), estate_scheme_url(@defect.property.scheme.estate, @defect.property.scheme))
    = breadcrumb_link_to(I18n.t('page_title.staff.properties.show', name: @defect.property.address), property_url(@defect.property))
    = breadcrumb_current(@defect.reference_number)

.govuk-grid-row
  .govuk-grid-column-full
    %h1.govuk-heading-l
      = I18n.t('page_title.staff.defects.show', reference_number: @defect.reference_number)
.govuk-grid-row
  .govuk-grid-column-full
    %h2.govuk-heading-m= @defect.title
    = flag_toggle_button(@defect)
    = link_to(I18n.t('button.edit.defect'), edit_property_defect_url(@defect.property, @defect), class: 'govuk-button govuk-button--secondary mb0')
    = link_to(I18n.t('button.create.evidence'), new_defect_evidence_url(@defect), class: 'govuk-button govuk-button--secondary mb0')
    = link_to(I18n.t('button.forward.contractor'), new_defect_forward_url(@defect, recipient_type: :contractor), class: 'govuk-button govuk-button--secondary mb0')
    = link_to(I18n.t('button.forward.employer_agent'), new_defect_forward_url(@defect, recipient_type: :employer_agent), class: 'govuk-button govuk-button--secondary mb0')

.govuk-grid-row
  .govuk-grid-column-one-half.summary
    = render partial: '/shared/defects/summary_information', locals: { defect: @defect }
  .govuk-grid-column-one-half.description
    %h3.govuk-heading-s.section-heading--s
      Defect description
    %p.govuk-body= @defect.description

.govuk-grid-row
  .govuk-grid-column-one-half.property-location
    = render partial: '/shared/defects/property_location_information', locals: { defect: @defect }

  .govuk-grid-column-one-half.contact-information
    = render partial: '/shared/defects/contact_information', locals: { defect: @defect }

.govuk-grid-row
  .govuk-grid-column-one-half.evidence
    = render partial: '/shared/defects/evidence_information', locals: { evidences: @defect.evidences }

.govuk-grid-row
  %hr{class: 'govuk-section-break govuk-section-break--xs govuk-section-break--visible govuk-!-margin-bottom-4'}
  .govuk-grid-column-one-half.comments
    %h2.govuk-heading-m
      Comments
    = link_to(I18n.t('button.create.comment'), new_defect_comment_url(@defect), class: 'govuk-button mb0')
    = render partial: '/shared/comments/list', locals: { comments: @defect.comments }

  .govuk-grid-column-one-half.events
    %h2.govuk-heading-m
      Events
    = render partial: '/shared/events/list', locals: { events: @defect.activities }
